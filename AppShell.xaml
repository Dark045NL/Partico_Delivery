<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Partico_Delivery.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Partico_Delivery.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Partico_Delivery">

    <ShellContent Route="home" Title="Home" ContentTemplate="{DataTemplate local:HomePage}" />
    <ShellContent Route="scanner" Title="Scanner" ContentTemplate="{DataTemplate local:QRScannerPage}" />
    <ShellContent Route="route" Title="Route" ContentTemplate="{DataTemplate local:RoutePage}" />
    <ShellContent Route="settings" Title="Instellingen" ContentTemplate="{DataTemplate local:SettingsPage}" />
    <ShellContent Route="deliveries" Title="Leveringen" ContentTemplate="{DataTemplate local:DeliveriesPage}" />
</Shell>
